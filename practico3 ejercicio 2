#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
int sumaimp (int n);
void main()
{
	int n, x;
	cout << "Ingrese el numero maximo de la serie" << endl;
	cin >> n;
	x=sumaimp(n);
	cout << "La suma es: "<<endl;
  cout<< x;
	getch();
}
int sumaimp (int n)
{
	int s=0, i=1;
	while (i<=n)
	{
		if (i%2!=0)
			s=s+i;
		i=i+1;
	}
	return s;
}
