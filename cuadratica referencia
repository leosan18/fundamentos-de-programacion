#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

//prototipos
float discriminante(float a,float b,float c);
void reales (float a,float b,float c,float &x1,float &x2);
//& son variables por referencia, es decir que cambian de valor en la funcion porque son punteros a las variables que llaman

void main()
{
	float a,b,c,valor1,valor2,d;
	cout<<"ingrese los valores de a,b,c"<<endl;
	cin>>a>>b>>c;
	d=discriminante(a,b,c);
	if(d>0)
	{
		reales(a,b,c,valor1,valor2);//cuando la funcion no devuelve nada-void
		cout<<"raiz 1:"<<valor1<<endl;
		cout<<"raiz 2:"<<valor2<<endl;
	}
	else 
		cout<<"no son reales"<<endl;
	getch();
}
float discriminante(float a,float b,float c)
 { float d;
  d=(b*b)-(4*a*c);
  return d;
}
void reales (float a,float b,float c,float &x1,float &x2)
 {
x1=(-b+sqrt(b*b-4*a*c))/2*a;
x2=(-b-sqrt(b*b-4*a*c))/2*a;
}
