   void cargar(int a[],int tam)
   {
	   for(int i=1;i<=tam;i++)
	   {
		   cout<<"a["<<i<<"]=";
		   cin>>a[i];
	   }
	   
   }
        void arreglo(int a[],int tam)
		{	
			int x;
			cout<<"cual numero desea que sea x"<<endl;
	        cin>>x;
			for(int i=0;i<=tam;i++)
			{
				a[i];
				if(a[i]==x)
					cout<<a[i];

			}
		}



